<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/spacing_small"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/grey_5"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/myAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <ImageView
                android:id="@+id/ImageView_ActionIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/spacing_smlarge"
                android:layout_marginBottom="@dimen/spacing_smlarge"
                android:src="@drawable/ic_phone_android"
                android:tint="@color/colorPrimaryLight" />

            <TextView
                android:id="@+id/TextView_ActionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check 1Balance"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_90" />

        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>
</androidx.cardview.widget.CardView>

